<MudDialog>
    <DialogContent>
        <DirectValidationForm @bind-IsValid="@_isValidForm"
                              Class="ma-5"
                              Style="width: 400px"
                              @ref="_form">
            <MudTextField Label="Name"
                          Validation="_nameValidator.Validation"
                          Class="mb-5"
                          @bind-Value="TestCase.Name" />
            <MudTextField Label="URL"
                          Class="mb-5"
                          @bind-Value="TestCase.StartUrl"
                          Converter="new UriConverter()"
                          Validation="_uriValidator.Validation" />
            <MudTextField Label="Default Wait For UI Element"
                          @bind-Value="TestCase.DefaultWaitForUIElement"
                          Class="mb-5" />
            <MudCheckBox @bind-Checked="TestCase.RunsPeriodically" 
                         Label="Runs Periodically" 
                         Color="Color.Primary"/>
        </DirectValidationForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary"
                   OnClick="ClickEvent"
                   Disabled="@(_isValidForm == false)">@EventName</MudButton>
    </DialogActions>
</MudDialog>
